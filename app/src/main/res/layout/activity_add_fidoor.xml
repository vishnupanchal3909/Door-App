<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Door.AddFIDoor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/getuserimage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="FIBER DOOR"
                        android:fontFamily="@font/average"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/getuserimage"
                        android:layout_marginTop="30dp"
                        android:layout_above="@+id/getusername"
                        app:cardCornerRadius="13dp"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_launcher_background"
                            android:id="@+id/getuserimageinimageview"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <EditText
                        android:id="@+id/getproductname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Your Product Name"
                        android:inputType="textCapWords"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/getproductprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Your Name Price"
                        android:inputType="textCapWords"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/getproductdesc"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Enter Your Product Description"
                        android:inputType="textCapWords"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <android.widget.Button
                        android:id="@+id/saveprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/getusername"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="80dp"
                        android:background="@color/green"
                        android:padding="10dp"
                        android:text="Save Profile"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <ProgressBar
                        android:id="@+id/progressbarinsetprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/saveprofile"
                        android:layout_marginTop="20dp"
                        android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>