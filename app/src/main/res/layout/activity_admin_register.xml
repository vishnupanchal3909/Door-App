<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/average"
            android:text="REGISTERTION FOR ADMIN"
            android:id="@+id/Register"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ADMINNameinput"
            android:layout_marginRight="20dp"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            android:layout_below="@+id/Register"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/ADMINName"
                android:hint="Name"
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/ADMINEmailinput"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:startIconDrawable="@drawable/ic_baseline_email_24"
            android:layout_below="@+id/ADMINNameinput"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/ADMINemail"
                android:hint="Email"
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/ADMINshopinput"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:startIconDrawable="@drawable/ic_baseline_shop_24"
            android:layout_below="@+id/ADMINemailinput"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/ADMINshop"
                android:hint="Shopkepper Id"
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/ADMINphoneinput"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:startIconDrawable="@drawable/ic_baseline_phone_android_24"
            android:layout_below="@+id/textview2"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/ADMINphone"
                android:hint="Phone"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            android:id="@+id/ADMINpasswordinput"
            android:layout_below="@+id/ADMINphoneinput"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/ADMINpassword"
                android:hint="Password"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/ADMINpasswordinput"
            android:gravity="center"
            android:padding="15dp"
            android:id="@+id/Adminsubmit"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/background"
            android:text="SUBMIT"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ADMINSignIN"
            android:text="SignIN"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blue"/>
    </LinearLayout>
</RelativeLayout>